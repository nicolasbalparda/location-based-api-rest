<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_restaurant_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_restaurant_delivery_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Envío $45  *  Entre 30' y 45'"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_restaurant_header"/>

        <TextView
            android:id="@+id/tv_restaurant_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="El club de la milanesas"
            android:textColor="@android:color/primary_text_light"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_restaurant_delivery_info"/>

        <TextView
            android:id="@+id/tv_restaurant_starts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="4.3"
            android:textColor="@color/green"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawablePadding="4dp"
            android:drawableEnd="@drawable/ic_star_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_restaurant_title"/>

        <View
            android:id="@+id/separator"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_restaurant_starts"/>

        <TextView
            android:id="@+id/tv_restaurant_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Milanesas,Hamburguesas,Sándwiches"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/separator"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>